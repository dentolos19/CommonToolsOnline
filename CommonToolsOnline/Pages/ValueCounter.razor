@page "/ValueCounter"

<h1>Counter</h1>

<p>The current value is @_currentValue</p>

<button class="btn btn-primary" @onclick="IncrementValue">Increment Value</button>

<button class="btn btn-primary" @onclick="DecrementValue">Decrement Value</button>

@code
{

    private int _currentValue;

    private void IncrementValue()
    {
        _currentValue++;
    }

    private void DecrementValue()
    {
        _currentValue--;
    }

}