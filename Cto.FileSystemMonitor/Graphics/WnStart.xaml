<controls:AdonisWindow x:Class="Cto.FileSystemMonitor.Graphics.WnStart"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:controls="clr-namespace:AdonisUI.Controls;assembly=AdonisUI"
                       Title="Configure Start Monitoring" Width="500" Height="300" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" MinWidth="150" MaxWidth="200"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Margin="0,0,0,10">
            <Button Margin="10,10,10,0" Content="Start Monitoring" Height="30" Click="Start"/>
            <Button Margin="10,10,10,0" Content="Cancel" Height="30" Click="Cancel"/>
            <Separator Margin="10,10,10,0"/>
            <Button Margin="10,10,10,0" Content="Add Directory" Height="30" Click="AddDirectory"/>
            <Button x:Name="RemoveButton" Margin="10,10,10,0" Content="Remove Directory" Height="30" Click="RemoveDirectory"/>
            <Button Margin="10,10,10,0" Content="Clear Directories" Height="30" Click="ClearDirectories"/>
        </StackPanel>
        <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch"/>
        <ListBox x:Name="DirectoryList" Grid.Column="2" Margin="10,10,10,10" SelectionChanged="UpdateDirectorySelection"/>
    </Grid>
</controls:AdonisWindow>